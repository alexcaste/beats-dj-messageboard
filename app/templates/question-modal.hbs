{{#my-modal title='Ask a Question' ok='save' close='removeModal'}}
  <form {{action 'ok' on='submit' target=view}}>
    <div class="form-group">
      <label>Question:</label>
      {{input id="text" class="form-control" value=text}}
      <label>Description</label>
      {{input id="description" class="form-control" value=description}}
      <label>Author</label>
      {{input id="author" class="form-control" value=author}}
    </div>
  </form>
{{/my-modal}}
