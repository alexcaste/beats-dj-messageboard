<div class="row">
  <div class="col-md-4">
    <h2 class="fontsize fancyfont ">It's All About the Music</h2>
    <hr>
    <div class="row well">
      <ul class="list-unstyled">

        {{#each question in model}}

        <li>
          <blockquote>
            <p>
              <span class="fancyfont">{{#link-to 'question' question.id}}{{question.text}}{{/link-to}}</span>
            </p>
            <footer><cite>{{question.author}}  ({{post-date question.date}})</cite></footer>
          </blockquote>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  
<div class='col-md-8'>
    {{outlet}}
</div>
</div>
